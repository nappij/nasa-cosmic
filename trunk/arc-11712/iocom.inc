C----------------------------------------------------------------
C
C		I    O    C    O    M
C			
C     Common area used by IBASE.FOR for I/O based values.
C----------------------------------------------------------------
C
C Declare the necessary variables
C
	CHARACTER	BUF * 2000
	CHARACTER * 80	CHAR80
	CHARACTER * 34	BADTYPEMSG
	CHARACTER * 16	CURRENT_CUBE
	CHARACTER * 12	CUBE_FILE_SPEC
	CHARACTER * 12	LABEL_FILE_SPEC
	CHARACTER * 12	LAY_FILE_SPEC
	CHARACTER * 10	HELP_FILE_SPEC
	CHARACTER *  1	USER_MODE
	INTEGER   *  4	OLDBUF
	PARAMETER	(CUBE_FILE_SPEC   = 'IDBMASTR.IDB')
	PARAMETER	(LAY_FILE_SPEC    = 'IDBLAYER.IDB')
	PARAMETER	(LABEL_FILE_SPEC  = 'IDBLABEL.IDB')
	PARAMETER	(HELP_FILE_SPEC   = 'CPARMS.HLP')
	PARAMETER	(BADTYPEMSG = 
	1		     'ERROR-Inappropriate Layer Type.')
C
C Set up the status codes.
C
	INTEGER		FAIL_STS
	INTEGER		FIL_NOT_FND_STS
	INTEGER		MXD_ACC_STS
	INTEGER		NO_SUCH_REC_STS
	INTEGER		OPEN_FAIL_STS
	INTEGER		SUCCESS_STS
	INTEGER		UNKNOWN_STS
	INTEGER		UNIT_OPEN_STS
C
	INTEGER		UNIT_INPUT
	INTEGER		UNIT_LABEL
	INTEGER		UNIT_LAYER
	INTEGER		UNIT_MASTER
	INTEGER		UNIT_OUTPUT
C
C Declare the status indicators
C
	PARAMETER	(FAILSTS 	 =  1)
	PARAMETER	(FIL_NOT_FND_STS =  2)
	PARAMETER	(MXD_ACC_STS     =  3)
	PARAMETER	(NO_SUCH_REC_STS =  4)
	PARAMETER	(OPEN_FAIL_STS   =  5)
	PARAMETER	(SUCCESS_STS     =  6)
	PARAMETER	(UNKNOWN_STS     =  7)
	PARAMETER	(UNIT_OPEN_STS   =  8)
C
	COMMON /IOCOM/	CURRENT_CUBE,
	2		CHAR80,
	3		USER_MODE,
	4		UNIT_INPUT,
	5		UNIT_LABEL,
	6		UNIT_LAYER,
	7		UNIT_MASTER,
	8		UNIT_OUTPUT,
	9		UNIT_REPORT	
